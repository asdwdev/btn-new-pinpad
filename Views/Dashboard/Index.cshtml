@{
    ViewData["Title"] = "Dashboard Page";
}
<div class="grid grid-cols-4 gap-6">
    <!-- Total Device -->
    <div class="bg-gradient-to-r from-blue-500 to-purple-500 text-white p-5 rounded-lg shadow-lg flex flex-col justify-between">
        <div class="text-3xl font-bold">40</div>
        <div class="flex justify-between items-center mt-2">
            <span>Total Device</span>
            <i class="fa-solid fa-tablet-screen-button text-lg"></i>
        </div>
    </div>

    <!-- Not Ready to Use -->
    <div class="bg-gradient-to-r from-pink-500 to-orange-500 text-white p-5 rounded-lg shadow-lg flex flex-col justify-between">
        <div class="text-3xl font-bold">23</div>
        <div class="flex justify-between items-center mt-2">
            <span>Not Ready To Used</span>
            <i class="fa-solid fa-lightbulb text-lg"></i>
        </div>
    </div>

    <!-- Ready to Use -->
    <div class="bg-gradient-to-r from-green-500 to-blue-500 text-white p-5 rounded-lg shadow-lg flex flex-col justify-between">
        <div class="text-3xl font-bold">1</div>
        <div class="flex justify-between items-center mt-2">
            <span>Ready To Use</span>
            <i class="fa-solid fa-chart-line text-lg"></i>
        </div>
    </div>

    <!-- Active -->
    <div class="bg-gradient-to-r from-red-500 to-pink-500 text-white p-5 rounded-lg shadow-lg flex flex-col justify-between">
        <div class="text-3xl font-bold">0</div>
        <div class="flex justify-between items-center mt-2">
            <span>Active</span>
            <i class="fa-solid fa-folder text-lg"></i>
        </div>
    </div>

    <!-- Inactive -->
    <div class="bg-gradient-to-r from-blue-700 to-blue-500 text-white p-5 rounded-lg shadow-lg flex flex-col justify-between">
        <div class="text-3xl font-bold">7</div>
        <div class="flex justify-between items-center mt-2">
            <span>Inactive</span>
            <i class="fa-solid fa-folder text-lg"></i>
        </div>
    </div>

    <!-- Maintenance -->
    <div class="bg-gradient-to-r from-purple-700 to-pink-500 text-white p-5 rounded-lg shadow-lg flex flex-col justify-between">
        <div class="text-3xl font-bold">9</div>
        <div class="flex justify-between items-center mt-2">
            <span>Maintenance</span>
            <i class="fa-solid fa-folder text-lg"></i>
        </div>
    </div>
</div>

