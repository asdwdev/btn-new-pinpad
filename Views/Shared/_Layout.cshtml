@* Pastikan file ini .cshtml dan _ViewImports.cshtml sudah ada *@
@* _ViewImports.cshtml harus berisi: @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers *@

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DashboardApp</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <link href="~/css/site.css" rel="stylesheet" />
</head>

<body class="bg-gray-50 min-h-screen">
    <div class="flex">
        <!-- Sidebar -->
        <aside class="w-64 bg-gradient-to-b from-purple-700 to-red-700 text-white min-h-screen p-5">
            <div class="mb-8">
                <h1 class="text-2xl font-bold">NEW PINPAD</h1>
                <p class="text-sm opacity-80">Admin</p>
            </div>

            <nav class="space-y-1">
                <!-- Dashboard Link -->
                <a class="flex items-center gap-3 p-3 rounded hover:bg-white/10"
                   asp-area=""
                   asp-controller="Dashboard"
                   asp-action="Index">
                    <i class="fa fa-home"></i> Dashboard
                </a>

                <!-- Monitoring Dropdown -->
                <div>
                    <button type="button"
                            onclick="toggleDropdown()"
                            class="flex items-center justify-between gap-3 w-full p-3 rounded hover:bg-white/10">
                        <div class="flex items-center gap-3 text-md">
                            <i class="fa-solid fa-chart-column"></i>
                            Monitoring
                        </div>
                        <i id="arrowIcon" class="fa-solid fa-chevron-down transition-transform duration-300 text-s"></i>
                    </button>

                    <!-- Dropdown Items -->
                    <div id="dropdownMenu" class="hidden ml-8 mt-1">
                        <a asp-controller="Dashboard" asp-action="Monitoring"
                           class="block p-2 rounded hover:bg-white/10 text-sm">
                            Pinpad List
                        </a>
                    </div>
                </div>

                <!-- Pinpad Admin Logistik -->
                <a class="flex items-center gap-3 p-3 rounded hover:bg-white/10"
                   asp-controller="Dashboard"
                   asp-action="Pinpad">
                    <i class="fa fa-cubes"></i> Pinpad (Admin Logistik)
                </a>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="flex-1 p-8">
            <div class="flex justify-between items-center mb-8">
                <h2 class="text-2xl font-semibold">Dashboard</h2>
                <div class="text-sm text-gray-500">User: Admin</div>
            </div>

            <div class="container mx-auto">
                @RenderBody()
            </div>
        </main>
    </div>

    <script>
        function toggleDropdown() {
            const menu = document.getElementById('dropdownMenu');
            const arrow = document.getElementById('arrowIcon');

            // Toggle menu visibility
            menu.classList.toggle('hidden');

            // Rotate arrow icon
            arrow.classList.toggle('rotate-180');
        }
    </script>
</body>
</html>
